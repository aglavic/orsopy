      "title": "qz_column",
      "type": "object",
      "properties": {
        "name": {
          "enum": [
            "Qz"
          ],
          "type": "string"
        },
        "dimension": {
          "default": "",
          "type": "string"
        },
        "unit": {
          "enum": [
            "1/angstrom",
            "1/nm"
          ],
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "R_column": {
      "title": "R_column",
      "type": "object",
      "properties": {
        "name": {
          "enum": [
