        }
      },
      "required": [
        "name"
      ]
    },
    "Reduction": {
      "title": "Reduction",
      "type": "object",
      "properties": {
        "software": {
          "anyOf": [
            {
              "$ref": "#/definitions/Software"
            },
            {
              "type": "string"
            }
          ]
        },
        "computer": {
          "description": "Computer used for reduction",
          "type": "string"
        },
        "call": {
          "description": "The command line call used",
          "type": "string"
        },
        "timestamp": {
          "description": "Timestamp string, formatted as ISO 8601 datetime",
          "type": "string",
          "format": "date-time"
        },
        "creator": {
          "$ref": "#/definitions/Person"
        },
        "corrections": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "script": {
          "description": "Path to reduction script or notebook",
          "type": "string"
        },
        "binary": {
          "description": "Path to full information file",
          "type": "string"
        }
