          "type": "string"
        },
        "unit": {
          "description": "SI unit string",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "sR_column": {
      "title": "sR_column",
      "type": "object",
      "properties": {
        "name": {
          "enum": [
            "sR"
          ],
          "type": "string"
        },
        "dimension": {
          "default": "",
          "type": "string"
        },
        "unit": {
          "description": "SI unit string",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "sQz_column": {
      "title": "sQz_column",
      "type": "object",
      "properties": {
        "name": {
          "enum": [
            "sQz"
          ],
          "type": "string"
        },
        "dimension": {
          "default": "",
          "type": "string"
        },
        "unit": {
          "enum": [
            "1/angstrom",
            "1/nm"
          ],
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "column": {
      "title": "column",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the column",
          "type": "string"
        },
        "dimension": {
          "default": "",
          "type": "string"
        },
        "unit": {
          "description": "SI unit string",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "Software": {
      "title": "Software",
